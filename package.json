{
	"name": "e2e-tests",
	"version": "1.0.0",
	"description": "E2E tests automation for oasis-borrow",
	"main": "index.js",
	"author": "juan-langa <juan@oazoapps.com>",
	"license": "MIT",
	"devDependencies": {
		"@ethersproject/providers": "^5.7.2",
		"@playwright/test": "^1.37.1",
		"@synthetixio/synpress": "^3.7.2-beta.7",
		"axios": "^1.5.0",
		"dotenv": "^16.3.1",
		"ethers": "^6.7.1"
	},
	"scripts": {
		"test:e2e:no-wallet": "npx playwright test --project=no-wallet",
		"test:e2e:with-wallet": "WITH_WALLET=true npx playwright test --project=with-wallet --workers=1",
		"test:e2e": "yarn test:e2e:no-wallet & yarn test:e2e:with-wallet",
		"test:e2e:no-wallet:regression": "npx playwright test --grep @regression --project=no-wallet",
		"test:e2e:with-wallet:regression": "WITH_WALLET=true npx playwright test --grep @regression --project=with-wallet --workers=1",
		"test:e2e:no-wallet:regression:ci": "npx playwright test --grep @regression --project=no-wallet --workers=5",
		"test:e2e:with-wallet:regression:ci": "WITH_WALLET=true xvfb-run npx playwright test --grep @regression --project=with-wallet --workers=1",
		"test:e2e:regression": "yarn test:e2e:no-wallet:regression & yarn test:e2e:with-wallet:regression",
		"test:report": "npx playwright show-report"
	}
}
